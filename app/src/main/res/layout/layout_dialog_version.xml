<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_loading_dialog"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_card"
    android:minHeight="@dimen/dp_300"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/notice"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_dialog_version_back"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@mipmap/delete_search"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_version_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_15"
        android:layout_weight="1"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/black_1A241F"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_102A2C36"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_dialog_version_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/update_cancel"
            android:textColor="@color/orange_FFC273"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/view_dialog_version_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/gray_102A2C36"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dialog_version_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/green_2EA992"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>