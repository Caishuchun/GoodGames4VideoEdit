<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_6"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="幻彩文字"
        android:textColor="@color/black_1A241F"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_inputText_enter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/bg_gray_6"
        android:hint="请输入文字"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/black_1A241F"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inputText_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/green_2EC8AC"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inputText_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>