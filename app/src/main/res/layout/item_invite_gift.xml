<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72"
    android:layout_marginBottom="@dimen/dp_6"
    android:background="@drawable/bg_gray_6"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_7">

        <com.fortune.zg.widget.RoundImageView
            android:id="@+id/riv_item_gift_head"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/head_photo"
            app:type="circle" />

        <ImageView
            android:id="@+id/iv_item_gift_from"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/gift_qq" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_gift_name"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:text="@string/app_name"
        android:textColor="@color/black_1A241F"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_14"
        android:background="@color/gray_BBBBBB" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complete_goal"
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_6"
                android:src="@mipmap/money" />

            <TextView
                android:id="@+id/tv_item_gift_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                android:text="50"
                android:textColor="@color/orange_FF9C00"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_gift_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/update_app_level"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_7"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_gift_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            android:textColor="@color/orange_F06900"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_item_gift_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_invite_gift_can_get"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/get"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>