<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_86"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@drawable/bg_search_result">

    <ImageView
        android:id="@+id/iv_item_result_icon"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:layout_margin="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/head_photo" />

    <TextView
        android:id="@+id/tv_item_result_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:background="@drawable/bg_hot"
        android:drawableStart="@mipmap/hot"
        android:drawablePadding="@dimen/dp_2"
        android:paddingStart="@dimen/dp_2"
        android:paddingTop="@dimen/dp_1"
        android:paddingEnd="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_1"
        android:textColor="@color/white_FFFFFF"
        android:textSize="@dimen/sp_6" />

    <TextView
        android:id="@+id/tv_item_result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp_10"
        android:textColor="@color/black_1A241F"
        android:textSize="@dimen/sp_8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toEndOf="@id/iv_item_result_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_result_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_3"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_8" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_result_news"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/game_new" />

            <TextView
                android:id="@+id/tv_item_result_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:textColor="@color/black_878787"
                android:textSize="@dimen/sp_10" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@color/black_878787" />

            <TextView
                android:id="@+id/tv_item_result_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_id"
                android:textColor="@color/black_878787"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_item_result_gift"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_3"
                android:src="@mipmap/gift_close" />

            <TextView
                android:id="@+id/tv_item_result_gift_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/black_601A241F"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <com.zhy.view.flowlayout.FlowLayout
            android:id="@+id/fl_item_result_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>