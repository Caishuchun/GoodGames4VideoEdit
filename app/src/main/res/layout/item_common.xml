<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common"
    android:orientation="vertical"
    android:padding="@dimen/dp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.fortune.zg.widget.RoundImageView
            android:id="@+id/iv_item_common_head"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/head_photo"
            app:type="circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_common_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_item_common_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="11-19 20:30"
                android:textColor="@color/black_878787"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_common_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_5"
        android:text="common"
        android:textColor="@color/black_1A241F"
        android:textSize="@dimen/sp_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cv_item_common_picAndVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_item_common_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/bg_button_with_num"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2">

            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@mipmap/mv_icon_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_common_msg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@drawable/bg_button_with_num"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2">

            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@mipmap/mv_icon_msg" />

            <TextView
                android:id="@+id/tv_item_common_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:text="0"
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_item_common_good"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@drawable/bg_button_with_num"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2">

            <ImageView
                android:id="@+id/iv_item_common_like"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@mipmap/mv_icon_good_focus" />

            <TextView
                android:id="@+id/tv_item_common_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:text="0"
                android:textColor="@color/green_63C5AD"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_common_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_common_showAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:text="查看所有"
        android:textColor="@color/green_63C5AD"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

</LinearLayout>