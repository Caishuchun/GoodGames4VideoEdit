<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_60"
    android:layout_height="@dimen/dp_60">

    <RelativeLayout
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true">

        <com.fortune.zg.widget.RoundImageView
            android:id="@+id/iv_item_common_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:radius="@dimen/dp_5"
            app:type="round" />

        <ImageView
            android:id="@+id/iv_item_common_video"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:src="@drawable/video_play" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_item_common_delete"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/delete" />

    <TextView
        android:id="@+id/tv_item_common_num"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_2"
        android:background="@drawable/bg_pic_num"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white_FFFFFF"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>