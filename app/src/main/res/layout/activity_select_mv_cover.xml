<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.SelectMvCoverActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:id="@+id/tv_selectMvCover_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/back_black"
            android:text="@string/cancel"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_selectMvCover_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/save"
            android:textColor="@color/green_2EC8AC"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_54"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_weight="1"
        android:background="@drawable/bg_green_6">

        <VideoView
            android:id="@+id/video_selectMvCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/white_FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_selectMvCover_little"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/video_cover_little" />

        <SeekBar
            android:id="@+id/sb_selectMvCover"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_selectMvCover_add"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/video_cover_more" />
    </LinearLayout>
</LinearLayout>