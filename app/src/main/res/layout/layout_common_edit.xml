<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_common_edit_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cv_common_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bg_common_edit_top"
        android:paddingStart="@dimen/dp_10"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:maxHeight="@dimen/dp_100"
        android:minHeight="@dimen/dp_50"
        android:padding="@dimen/dp_10">

        <EditText
            android:id="@+id/et_common_edit_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_common_edit_enter"
            android:hint="和谐、有爱、拒绝黄赌毒"
            android:inputType="textShortMessage"
            android:maxLines="4"
            android:minHeight="@dimen/dp_30"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_common_edit_submit"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="发布"
                android:textColor="@color/green_63C5AD"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_common_edit_pic"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/album" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_common_edit_below"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="和谐、有爱、拒绝黄赌毒"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:id="@+id/iv_common_edit_below_pic"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/album" />
    </LinearLayout>
</LinearLayout>