<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_2"
    android:layout_marginEnd="@dimen/dp_2"
    android:layout_marginBottom="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_7"
    app:cardElevation="@dimen/dp_2">

    <RelativeLayout
        android:id="@+id/rl_item_game_mv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:background="@drawable/bg_game_item_mv"
        android:visibility="visible">

        <com.fortune.zg.widget.RoundImageView
            android:id="@+id/civ_item_game_mv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="center"
            app:radius="@dimen/dp_4"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_item_game_mv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_6"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="name"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:gravity="end"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_share"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_share" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_msg"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_message" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_good"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_good" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_look"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_look" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_45"
            android:background="@drawable/bg_game_detail_update"
            android:paddingStart="@dimen/dp_2"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_1"
            android:text="MV"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_9"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/sp_28"
            android:layout_marginBottom="@dimen/dp_50"
            android:text="30min"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_9"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:src="@drawable/video_play" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>