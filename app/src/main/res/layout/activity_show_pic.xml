<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_000000"
    tools:context=".activity.ShowPicActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_showPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_showPic_back"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/back_white" />

        <TextView
            android:id="@+id/tv_showPic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1/1"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/iv_showPic_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp_10"
            android:text="@string/save"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/green_63C5AD" />
    </RelativeLayout>

</RelativeLayout>