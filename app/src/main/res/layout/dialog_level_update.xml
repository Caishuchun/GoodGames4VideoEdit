<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_04000000">

    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_365"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_262"
            android:background="@mipmap/bg_level_update_top">

            <TextView
                android:id="@+id/tv_dialog_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_48"
                android:text="V2"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_48"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_18"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/money" />

                <TextView
                    android:id="@+id/tv_dialog_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="+20"
                    android:textColor="@color/orange_FFA855"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_level_update_bottom">

            <LinearLayout
                android:id="@+id/ll_dialog_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_24"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dialog_normalGet"
                    android:layout_width="@dimen/dp_92"
                    android:layout_height="@dimen/dp_42"
                    android:background="@drawable/bg_search_gray"
                    android:gravity="center"
                    android:text="@string/normal_get"
                    android:textColor="@color/black_1A241F"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_dialog_doubleGet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_52"
                    android:layout_marginStart="@dimen/dp_12"
                    android:background="@mipmap/bg_double_get"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dp_12"
                    android:text="@string/double_get"
                    android:textColor="@color/white_FFFFFF"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_dialog_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_50"
                android:text="@string/to_share"
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>