<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_gift"
    android:orientation="vertical"
    tools:context=".activity.GiftActivity">

    <ImageView
        android:id="@+id/iv_gift_back"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_14"
        android:src="@mipmap/login_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/bg_login_enter"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gift_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:text="Lv.1"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_12"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/pb_gift_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/pb_level" />

            <TextView
                android:id="@+id/tv_gift_level_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:src="@mipmap/money"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"/>

        <TextView
            android:id="@+id/tv_gift_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="500"
            android:textColor="@color/orange_FF9C00"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.fortune.zg.widget.TopTab4Gift
        android:id="@+id/tt_gift"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_12" />

    <FrameLayout
        android:id="@+id/fl_gift"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/sp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/bg_gift_white_bottom"
        android:padding="@dimen/dp_12" />

</LinearLayout>