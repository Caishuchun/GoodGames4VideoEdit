<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.DownloadingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_downloading_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10" />

        <LinearLayout
            android:id="@+id/ll_downloading_nothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_40">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:visibility="gone"
                android:src="@mipmap/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="本来无一物,何处惹尘埃"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/gray_9F9F9F"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_downloading_toHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去首页看看"
                android:textColor="@color/blue_769CF8"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_downloading_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:text="大家还下载了"
        android:textColor="@color/black_1A241F"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_downloading_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10" />
</LinearLayout>