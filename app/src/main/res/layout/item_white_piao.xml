<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_white_piao_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_126"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@drawable/bg_white_piao_got">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_white_piao_integral"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/money_ed" />

                <TextView
                    android:id="@+id/tv_white_piao_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="金币 +20"
                    android:textColor="@color/gray_C4C4C4"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_white_piao_add"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@mipmap/add_ed" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_white_piao_experience"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/experience_ed" />

                <TextView
                    android:id="@+id/tv_white_piao_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="XP +100"
                    android:textColor="@color/gray_C4C4C4"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_white_piao_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</FrameLayout>