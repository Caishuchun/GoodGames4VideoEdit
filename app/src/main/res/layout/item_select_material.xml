<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_89"
    android:layout_marginBottom="@dimen/dp_1"
    android:layout_height="@dimen/dp_89">

    <ImageView
        android:id="@+id/iv_item_selectMaterial_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/rl_item_selectMaterial_num"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tv_item_selectMaterial_num"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_select_num_un"
            android:gravity="center"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_item_selectMaterial_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_5"
        android:textColor="@color/white_FFFFFF"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>