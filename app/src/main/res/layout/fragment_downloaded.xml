<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DownloadedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_downloaded_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10" />

        <LinearLayout
            android:id="@+id/ll_downloaded_nothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_40">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/icon"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="本来无一物,何处惹尘埃"
                android:textColor="@color/gray_9F9F9F"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_downloaded_toHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去首页看看"
                android:textColor="@color/blue_769CF8"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>