<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_2"
    android:layout_marginTop="@dimen/dp_2"
    android:layout_marginEnd="@dimen/dp_2"
    android:layout_marginBottom="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_7"
    app:cardElevation="@dimen/dp_2">

    <LinearLayout
        android:id="@+id/ll_item_game_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_game_item"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_3">

            <com.fortune.zg.widget.RoundImageView
                android:id="@+id/civ_item_game_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_3"
                android:scaleType="fitXY"
                app:radius="@dimen/dp_4"
                app:type="round" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_7"
                android:background="@drawable/bg_hot"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_2">

                <ImageView
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:src="@mipmap/hot" />

                <TextView
                    android:id="@+id/tv_item_game_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_2"
                    android:textColor="@color/white_FFFFFF"
                    android:textSize="@dimen/sp_7" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp_7"
                android:paddingStart="@dimen/dp_2"
                android:paddingTop="@dimen/dp_1"
                android:paddingEnd="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_1"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_8" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_5"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_game_updateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_601A241F"
                android:textSize="@dimen/sp_8" />

            <ImageView
                android:id="@+id/iv_item_game_gift"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_2"
                android:src="@mipmap/gift_close" />

            <TextView
                android:id="@+id/tv_item_game_gift_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/black_601A241F"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>

        <com.zhy.view.flowlayout.FlowLayout
            android:id="@+id/fl_item_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_game_badge"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@mipmap/good" />

            <TextView
                android:id="@+id/tv_item_game_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/black_878787"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_item_game_mv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:background="@drawable/bg_game_item_mv"
        android:visibility="gone">

        <com.fortune.zg.widget.RoundImageView
            android:id="@+id/civ_item_game_mv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="center"
            app:radius="@dimen/dp_4"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_item_game_mv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_6"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="name"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:gravity="end"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_share"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_share" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_msg"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_message" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_good"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_good" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_game_mv_look"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/mv_look" />

                    <TextView
                        android:id="@+id/tv_item_game_mv_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0"
                        android:textColor="@color/white_FFFFFF"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_45"
            android:background="@drawable/bg_game_detail_update"
            android:paddingStart="@dimen/dp_2"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_1"
            android:text="MV"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_9"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/sp_28"
            android:layout_marginBottom="@dimen/dp_50"
            android:text="30min"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_9"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:src="@drawable/video_play" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_game_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_game_item_live"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:padding="@dimen/dp_2">

            <com.fortune.zg.widget.RoundImageView
                android:id="@+id/civ_item_live_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_1"
                android:scaleType="centerCrop"
                app:radius="@dimen/dp_4"
                app:type="round" />

            <ImageView
                android:id="@+id/iv_item_live_status"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/living" />

            <TextView
                android:id="@+id/tv_item_live_liver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_item_live_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_8" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_3"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_item_live_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@mipmap/live_tag"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_27"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_9" />
    </LinearLayout>
</androidx.cardview.widget.CardView>