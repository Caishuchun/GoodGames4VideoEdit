<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mainV5_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F7F7F7">

    <FrameLayout
        android:id="@+id/fl_mainV5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_50" />

    <com.fortune.zg.widget.BottomTab
        android:id="@+id/tab_mainV5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/fl_mainV5_barrage"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@drawable/bg_barrage"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:visibility="gone">

        <com.fortune.zg.widget.BarrageView
            android:id="@+id/barrage_mainV5_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_12" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_mainV5_shade_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000"
        android:paddingTop="@dimen/dp_28"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:padding="@dimen/dp_11"
                android:src="@mipmap/search_white_new" />

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_240"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/shade_draw_top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_85"
                android:gravity="center"
                android:text="此处输入游戏ID/游戏名/视频ID搜索或抢礼包"
                android:textColor="@color/green_2EC8AC"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mainV5_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_login_enter_line"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="我知道啦"
                android:textColor="@color/green_2EC8AC"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_190"
                android:gravity="center"
                android:text="此处可以发布视频"
                android:textColor="@color/green_2EC8AC"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_180"
                android:src="@drawable/shade_draw_bottom" />

            <RelativeLayout
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_60">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/issue_video" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>